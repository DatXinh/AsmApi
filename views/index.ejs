<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
<div class="form-container">
  <h2>Nhập Thông Tin Xe</h2>
  <form action="/add" method="POST">
    <div class="form-group">
      <label for="tenXe">Tên xe:</label>
      <input type="text" id="tenXe" name="tenXe" placeholder="Nhập tên xe" required>
    </div>
    <div class="form-group">
      <label for="hangSanXuat">Hãng sản xuất:</label>
      <input type="text" id="hangSanXuat" name="hangSanXuat" placeholder="Nhập hãng sản xuất" required>
    </div>
    <div class="form-group">
      <label for="namSanXuat">Năm sản xuất:</label>
      <input type="number" id="namSanXuat" name="namSanXuat" placeholder="Nhập năm sản xuất" required>
    </div>
    <div class="form-group">
      <label for="giaBan">Giá bán:</label>
      <input type="number" id="giaBan" name="giaBan" placeholder="Nhập giá bán" required>
    </div>
    <div class="form-group">
      <label for="moTa">Mô tả:</label>
      <textarea id="moTa" name="moTa" rows="4" placeholder="Nhập mô tả"></textarea>
    </div>
    <div class="form-group">
      <button type="submit">Lưu thông tin</button>
    </div>
  </form>
</div>

<div class="car-list">
  <h2>Danh sách xe</h2>
  <table border="1">
    <thead>
    <tr>
      <th>Tên xe</th>
      <th>Hãng sản xuất</th>
      <th>Năm sản xuất</th>
      <th>Giá bán</th>
      <th>Mô tả</th>
      <th>Hành động</th>
    </tr>
    </thead>
    <tbody>
    <% if (cars.length > 0) { %>
      <% cars.forEach(function(car) { %>
        <tr>
          <td><%= car.tenXe %></td>
          <td><%= car.hangSanXuat %></td>
          <td><%= car.namSanXuat %></td>
          <td><%= car.giaBan %></td>
          <td><%= car.moTa %></td>
          <td>
            <a href="/edit/<%=car._id%>">Sửa</a> |
            <a href="/delete/<%= car._id %>" onclick="return confirm('Bạn có chắc muốn xóa xe này?');">Xóa</a>
          </td>
        </tr>
      <% }); %>
    <% } else { %>
      <tr>
        <td colspan="6" style="text-align: center;">Không có xe nào được tìm thấy.</td>
      </tr>
    <% } %>
    </tbody>
  </table>
</div>
</body>
</html>
